<!doctype html>
<html lang="en">
<meta http-equiv="pragma" content="no-cache">
<body class="scroll-assist">
<div class="nav-container">
  <a id="top"></a>
  <nav>
    <%= render '/layouts/nav_transparent_final'%>
  </nav>
</div>
<div class="main-container">
  <section class="cover fullscreen image-bg overlay">
    <div class="background-image-holder">
      <%= image_tag("foundry/header.jpg", alt: "image", class: "background-image",
                    id: 'background_image')%>
    </div>
    <div class="container v-align-transform-custom">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
          <div class="feature bordered text-center">
            <h4 class="uppercase">Login</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="text-left">
                  <%= f.email_field :email, autofocus: true, placeholder: "mail", class: "mb0", type: "text"  %>
                </div>

                <div class="text-left">
                  <%= f.password_field :password, autocomplete: "off", placeholder: "contraseÃ±a", class: "mb0", type: "password"  %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="text-left">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, class: "mb0"%>
                    </div>
                <% end -%>
                <div>
                  <%= f.submit "Log in", :class => 'btn-default btn-xl' %>
                </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
</body>
</html>

