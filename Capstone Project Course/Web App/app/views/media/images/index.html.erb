<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date added</th>
      <th>Added by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image.created_at %></td>
        <td><%= image.added_by %></td>
        <td><%= link_to 'Editar', edit_media_image_path(image) %></td>
        <td><%= link_to 'Eliminar', [:media, image], method: :delete, data: { confirm: 'Â¿ Estas seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

