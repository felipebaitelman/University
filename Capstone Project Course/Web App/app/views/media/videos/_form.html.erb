<%= form_for([:media, @video], html: { multipart: true, id: 'nature1' }, remote:true) do |f| %>
    <% if @video.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(video.errors.count, "error") %> prohibited this video from being saved:</h2>

          <ul>
            <% video.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-8">
        <div class="field">
          <h5 class="uppercase mb8"><b>Nombre</b></h5>
          <%= f.text_field :name, :class => 'input', :placeholder => 'Ingresar Nombre' %>
        </div>

        <div class="field">
          <h5 class="uppercase mb8"><b>Descripción</b></h5>
          <%= f.text_area :description, :class => 'input', :placeholder => 'Ingresar Descripción' %>
        </div>
        <br>
        <% if @video.new_record? %>
            <div class="field">
              <h5 class="uppercase mb8"><b>Archivos</b></h5>
              <%= f.file_field :video_file%>
            </div>
            <br>
        <%end %>

      </div>
      <div class="col-sm-3"></div>
    </div>
    <br>

    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-2">
        <div class="actions">
          <% if @video.new_record? %>
              <%= f.submit :type => 'submit', :value => 'Subir video' %>
          <% else %>
              <%= f.submit :type => 'submit', :value => 'Actualizar video' %>
          <% end %>          </div>
      </div>
      <div class="col-sm-9"></div>
    </div>
    <br>
<% end %>
