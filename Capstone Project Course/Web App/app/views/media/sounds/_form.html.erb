<%= form_for([:media, @sound], html: { multipart: true }) do |f| %>
    <% if @sound.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(sound.errors.count, "error") %> prohibited this sound from being saved:</h2>

          <ul>
            <% sound.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-8">
        <div class="field">
          <h5 class="uppercase mb8"><b>Nombre</b></h5>
          <%= f.text_field :name, :class => 'input', :placeholder => 'Ingresar Nombre' %>
        </div>
        <div class="field">
          <h5 class="uppercase mb8"><b>Descripción</b></h5>
          <%= f.text_area :description, :class => 'input', :placeholder => 'Ingresar Descripción' %>
        </div>

        <% if @sound.new_record? %>
            <div class="field">
              <h5 class="uppercase mb8"><b>Archivo</b></h5>
              <%= f.file_field :sound_file %>
            </div>
            <br>
        <% end %>
      </div>
      <div class="col-sm-3"></div>
    </div>

    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-2">
        <div class="actions">
          <% if @sound.new_record? %>
              <%= f.submit :type => 'submit', :value => 'Subir Imagineria' %>
          <% else %>
              <%= f.submit :type => 'submit', :value => 'Actualizar Imagineria' %>
          <% end %>          </div>
      </div>
      <div class="col-sm-9"></div>
    </div>
    <br>
<% end %>
