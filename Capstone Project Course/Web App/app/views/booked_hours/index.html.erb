<h1>Booked Hours</h1>

<table>
  <thead>
    <tr>
      <th>Id event date</th>
      <th>Id user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booked_hours.each do |booked_hour| %>
      <tr>
        <td><%= booked_hour.id_event_date %></td>
        <td><%= booked_hour.id_user %></td>
        <td><%= link_to 'Show', booked_hour %></td>
        <td><%= link_to 'Edit', edit_booked_hour_path(booked_hour) %></td>
        <td><%= link_to 'Destroy', booked_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booked Hour', new_booked_hour_path %>
